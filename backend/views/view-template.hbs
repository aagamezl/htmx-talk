<ul role="list" class="todo-list stack-large stack-exception" aria-labelledby="list-heading">
  {{#each todos}}
    <li class="todo">
      <div class="stack-small">
        <div class="c-cb">
          <input id="{{id}}" type="checkbox" defaultChecked={completed} onChange={()=> toggleTaskCompleted(id)}
          />
          <label class="todo-label" for="{{id}}">
            {{name}}
          </label>
        </div>
        <div class="btn-group">
          <button type="button" class="btn" onClick={()=> setEditing(true)}
            Edit <span class="visually-hidden">{{name}}</span>
          </button>

          <button type="button" class="btn btn__danger" onClick={()=> deleteTask(id)}>
            Delete <span class="visually-hidden">{{name}}</span>
          </button>
        </div>
      </div>
    </li>
  {{/each}}
</ul>
